{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node",

    "rootDir": ".",
    "outDir": "dist",

    "baseUrl": ".",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,

    "types": ["node"]
  },

  "include": [
    "src",
    "generated"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
