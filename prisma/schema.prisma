generator client {
 provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  
}

model User {
  id       String      @id @default(uuid())
  balance  Decimal     @default(1000.00) 
  currency String      @default("USD")
  games    UserGames[]
}

model UserGames {
  gameId         String   @id
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  betAmount      Decimal
  minesPositions Int[]
  minesCount     Int
  seed           String
  status         String   
  payout         Decimal  @default(0)
  createdAt      DateTime @default(now())
  gameState      Json    
  gameMode       String   @default("MANUAL")
}